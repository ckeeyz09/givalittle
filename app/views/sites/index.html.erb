<div class="col-md-12 header-title" id="landing-img">
    <div class="container-fluid">
      <h1 class="logo" id="site-title">GivaLittle</h1>
      <h2 class="tag-line header-title-hgroup" id="tagline">Give back. One small donation at a time.</h2>
    </div>
  </div>

<div class="container-fluid" id="money">
  <div class="row text center">
    <% @charities.each do |charity| %>
      <div class="well row animated bounceInUp" id="charity-div0">
        <div class="col-xs-8">
          <h4><%= charity.charity_name %><h4>
          <p><%= charity.mission %></p>
        </div>
        <!-- Dontate Buttons -->
        <div class="dropdown btn-sm">
          <button class="btn btn-success dropdown-toggle" id="btn-donate" type="button" data-toggle="dropdown">Donate</button>
            <ul class="dropdown-menu animated bounceInRight">
              <li>
                <script type="text/javascript"
                src="https://www.simplify.com/commerce/simplify.pay.js"></script>
                <button data-sc-key="sbpb_OTE4NmI5ODctYjllNy00NTkwLTg5MmUtMjljMjEzYjE1ZjBm"
                data-name= "<%= charity.charity_name %>"
                data-description="Donating Money to <%= charity.charity_name %>"
                data-reference="99999"
                data-amount="500"
                class="btn btn-dark"
                id="five">
                $5
              </button>
            </li>
            <li>
              <script type="text/javascript" src="https://www.simplify.com/commerce/simplify.pay.js"></script>
              <button data-sc-key="sbpb_OTE4NmI5ODctYjllNy00NTkwLTg5MmUtMjljMjEzYjE1ZjBm"
              data-name= "<%= charity.charity_name %>"
              data-description="Donating Money to <%= charity.charity_name %>"
              data-reference="99999"
              data-amount="1000"
              class="btn btn-dark">
              $10
            </button>
          </li>
          <li>
              <script type="text/javascript" src="https://www.simplify.com/commerce/simplify.pay.js"></script>
              <button data-sc-key="sbpb_OTE4NmI5ODctYjllNy00NTkwLTg5MmUtMjljMjEzYjE1ZjBm"
              data-name= "<%= charity.charity_name %>"
              data-description="Donating Money to <%= charity.charity_name %>"
              data-reference="99999"
              data-amount="1500"
              class="btn btn-dark">
              $15
            </button>
          </li>
        </ul>
      </div>
    </div>
<% end %>
</div>
</div>


